# make bilayer with insane
python2.7 insane.py -o bilayer.gro -p topol.top -x 40 -y 40 -z 20 -l POPC:60 -l POPS:20 -l CHOL:20 -sol W -salt 0.1

# change topology file
sed -i -e 's/#include "martini.itp"//g' topol.top
cat << EOF > topol.add
#include "martini_v3.0.0_wall.itp"
#include "/home/samir/Martini3/martini_v3.0.0_ions_v1.itp"
#include "/home/samir/Martini3/martini_v3.0.0_phospholipids_v1.itp"
#include "/home/samir/Martini3/martini_v3.0_sterols_v1.0.itp"
#include "/home/samir/Martini3/martini_v3.0.0_solvents_v1.itp"
EOF
cat topol.add topol.top > tmp
rm topol.add
mv tmp topol.top
sed -i -e 's/NA+/NA /g' topol.top
sed -i -e 's/CL-/CL /g' topol.top

# change structure file
sed -i -e 's/NA+ /NA  /g' bilayer.gro
sed -i -e 's/ NA+/  NA/g' bilayer.gro
sed -i -e 's/CL- /CL  /g' bilayer.gro
sed -i -e 's/ CL-/  CL/g' bilayer.gro

# minimization
gmx grompp -f min.mdp -c bilayer.gro -p topol.top -o min.tpr -quiet
gmx mdrun -deffnm min -pin on -ntomp $CPU -ntmpi 1 -pinoffset $pinoffset -quiet

# equilibration
cat << EOF > index.input
2 | 3 | 4 | 9 | 10 | 11
name 15 LIP
5 | 6 | 7 | 8 | 12 | 13 | 14
name 16 SOL
q
EOF
gmx make_ndx -f bilayer.gro -quiet < index.input
rm index.input
gmx grompp -f eq.mdp -c min.gro -r min.gro -p topol.top -o eq.tpr -n index.ndx -quiet
gmx mdrun -deffnm eq -v -pin on -ntomp $CPU -ntmpi 1 -gpu_id $GPU -pinoffset $pinoffset -quiet

# Bumpy
echo 0 | gmx trjconv -f eq.xtc -s eq.tpr -fr frame.ndx -o frame.pdb -quiet
# L_flat > 2 * (R_sphere + R_junction)
python3 bumpy.py -s semisphere_plane -f frame.pdb -z 10 -g r_sphere:60 l_flat:400 r_junction:100 -o bmp.pdb -p bmp.top -n bmp.ndx --ignore_resnames W ION CL NA --gen_dummy_particles --dummy_grid_thickness 80 --dummy_name WAL
echo 0 | gmx trjconv -f bmp.pdb -s bmp.pdb -n bmp.ndx -o bmp.gro -quiet
head -5 topol.top >> tmp
echo '#include "wall.itp"' >> tmp
cat tmp bmp.top > tmp2
mv tmp2 bmp.top
rm tmp

#solvate
python2 insane.py -f bmp.gro -o b_sol.gro -p b_sol.top -x 40 -y 40 -z 21 -sol W -salt 0.1
sed -n '10p' < b_sol.top >> bmp.top
sed -n '11p' < b_sol.top >> bmp.top
sed -n '12p' < b_sol.top >> bmp.top
rm b_sol.top

# change topology file
sed -i -e 's/NA+/NA /g' bmp.top
sed -i -e 's/CL-/CL /g' bmp.top

# change structure file
sed -i -e 's/NA+ /NA  /g' b_sol.gro
sed -i -e 's/ NA+/  NA/g' b_sol.gro
sed -i -e 's/CL- /CL  /g' b_sol.gro
sed -i -e 's/ CL-/  CL/g' b_sol.gro

# edit box size
gmx editconf -f b_sol.gro -o b_solbb.gro -box 40 40 30 -center 20 20 13 -quiet

# minimization
gmx grompp -f min.mdp -c b_solbb.gro -r b_solbb.gro -p bmp.top -o b_min.tpr -quiet -maxwarn 1
gmx mdrun -deffnm b_min -v -quiet -pin on -ntomp $CPU -ntmpi 1 -pinoffset $pinoffset -gpu_id $GPU

## check energies
echo Potential | gmx energy -f b_min.edr -o potential.xvg -quiet
xmgrace potential.xvg
rm -f potential.xvg

# equilibration
rm index.ndx
cat << EOF > index.input
2 | 3 | 4 | 5 | 10 | 11 | 12 | 13
name 17 LIP
6 | 7 | 8 | 9 | 14 | 15 | 16
name 18 SOL
q
EOF
gmx make_ndx -f b_sol.gro -quiet < index.input
rm index.input
gmx grompp -f b_eq.mdp -c b_min.gro -r b_min.gro -p bmp.top -o b_eq.tpr -n index.ndx -quiet -maxwarn 1
gmx mdrun -deffnm b_eq -v -pin on -ntomp $CPU -ntmpi 1 -gpu_id $GPU -pinoffset $pinoffset -quiet
